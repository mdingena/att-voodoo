<grammar version="1.0" xml:lang="en-US" root="root" xmlns="http://www.w3.org/2001/06/grammar">

  <rule id="root">
    <one-of>
      <item> <ruleref uri="#command" /> </item>
      <item> <ruleref uri="#incantation" /> </item>
    </one-of>
  </rule>

  <rule id="command">
    <one-of>
      <item> suppress voodoo </item> <!-- Disable sending recognised speech to Voodoo Server. -->
      <item> awaken voodoo </item> <!-- Enable sending recognised speech to Voodoo Server. -->
      <item> attune voodoo </item> <!-- Begin incanting. -->
      <item> nullify </item> <!-- Abort incantation. -->
      <item> seal </item> <!-- Confirm short incantation. -->
      <item> <ruleref uri="#trigger" /> </item>
    </one-of>
  </rule>

  <rule id="trigger">
    <item> evoke </item>
    <one-of>
      <item> acid bolt </item>
      <item> crystal lance </item>
      <item> crystal pick </item>
      <item> crystal sword </item>
      <item> frost bolt </item>
    </one-of>
  </rule>

  <rule id="incantation">
    <ruleref uri="#property" />
    <item> of </item>
    <ruleref uri="#source" />
  </rule>

  <rule id="property">
    <one-of>
      <item> aether </item>
      <item> artifact </item>
      <item> bonds </item>
      <item> essence </item>
      <item> fluid </item>
      <item> fragment </item>
      <item> heart </item>
      <item> skin </item>
      <item> sliver </item>
      <item> tuft </item>
    </one-of>
  </rule>

  <rule id="source">
    <one-of>
      <item> babu </item>
      <item> dais </item>
      <item> earth </item>
      <item> embers </item>
      <item> gems </item>
      <item> fungi </item>
      <item> produce </item>
      <item> pyre </item>
      <item> revenant </item>
      <item> salt </item>
      <item> silica </item>
      <item> spriggull </item>
      <item> tera </item>
      <item> turabada </item>
      <item> weapon </item>
      <item> wyrm </item>
    </one-of>
  </rule>

</grammar>
